# 服务器配置
PORT=3001
NODE_ENV=development

# 域名配置
DOMAIN=https://yourdomain.com

# 管理员用户名
ADMIN_USERNAME=Admin

# 管理员密码（使用bcrypt加密后的值）
ADMIN_PASSWORD_HASH=你的bcrypt加密后的密码

# 会话密钥（生成随机字符串）
SESSION_SECRET=你的随机会话密钥

# 阿里云OSS配置
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=你的AccessKeyId
OSS_ACCESS_KEY_SECRET=你的AccessKeySecret
OSS_BUCKET=你的bucket名称

# 阿里云STS配置
STS_ROLE_ARN=你的STS角色ARN
STS_ROLE_SESSION_NAME=pdf-upload-session

# 阿里云云开发（TCB）配置
TCB_ENV_ID=你的环境ID
TCB_SECRET_ID=你的SecretId
TCB_SECRET_KEY=你的SecretKey

# JWT密钥
JWT_SECRET=你的JWT密钥

# 会话配置
SESSION_MAX_AGE=604800000  # 7天（毫秒）

# 登录失败锁定配置
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000  # 30分钟（毫秒）

# 文件上传限制
MAX_FILE_SIZE=52428800  # 50MB（字节）

# 速率限制
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100
